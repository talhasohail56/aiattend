// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  EMPLOYEE
}

enum AttendanceStatus {
  EARLY
  ON_TIME
  LATE
  ABSENT
  NO_CHECKOUT
}

model User {
  id           String    @id @default(cuid())
  name         String
  email        String    @unique
  passwordHash String
  role         UserRole  @default(EMPLOYEE)
  checkInTime  String?   // Format: "HH:mm" (e.g., "21:00"), null uses default
  checkOutTime String?   // Format: "HH:mm" (e.g., "05:00"), null uses default
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  attendances  Attendance[]
  shiftOverrides ShiftOverride[]
  lateRequests   LateRequest[]
}

model Attendance {
  id                String           @id @default(cuid())
  userId            String
  user              User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  shiftDate         DateTime         // Date representing the shift start day (9pm day)
  checkInAt         DateTime?
  checkOutAt        DateTime?
  checkInLatitude   Float?
  checkInLongitude  Float?
  checkOutLatitude  Float?
  checkOutLongitude Float?
  status            AttendanceStatus @default(ABSENT)
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  @@index([userId])
  @@index([shiftDate])
  @@unique([userId, shiftDate])
}

model ShiftOverride {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  shiftDate      DateTime // The specific date (start of shift)
  newCheckInTime String   // "HH:mm"
  reason         String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([userId, shiftDate])
  @@index([userId])
}

model LateRequest {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  shiftDate     DateTime
  requestedTime String
  reason        String
  status        String   @default("PENDING") // PENDING, APPROVED, REJECTED
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

